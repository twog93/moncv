{
  "name": "mon-cv",
  "description": "CRA + Electron sitting in a tree",
  "author": "Kitze ,twog",
  "version": "0.2.7",
  "private": true,
  "dependencies": {
    "cross-env": "5.1.6",
    "electron-is-dev": "0.3.0",
    "electron-log": "^2.2.6",
    "jquery": "^3.4.1",
    "moment": "^2.24.0",
    "react": "^16.8.6",
    "react-burger-menu": "^2.6.10",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.1",
    "typed.js": "^2.0.10",
    "update-electron-app": "^1.2.0"
  },
  "devDependencies": {
    "concurrently": "3.5.1",
    "electron": "2.0.2",
    "electron-builder": "^20.15.1",
    "prettier": "^1.4.4",
    "react-scripts": "1.1.4",
    "wait-on": "2.1.0"
  },
  "build": {
    "publish": {
      "provider": "github"
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
